= form_for @user do |f|

  - if @user.errors.any?
    .error-messages
      %h2 Form is invalid
      %ul
        - for message in @user.errors.full_messages
          %li= message

  .field
    = f.label :username
    %br/
    = f.text_field :username
  .field
    = f.label :password
    %br/
    = f.password_field :password
  .field
    = f.label :email
    %br/
    = f.text_field :email
  .field
    = f.label :avatar
    %br/
    Enter url or upload an avatar:
    %br/
    = f.url_field :remote_avatar_url #how do I let people enter a url?
    = f.file_field :avatar
  .field
    = f.label :bio
    %br/
    = f.text_field :bio
  .actions
    = f.submit
